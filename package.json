{
  "name": "esbuild-plugin-sass",
  "version": "0.7.0",
  "description": "Plugin for esbuild to support SASS styles",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "all": "npm-run-all --serial --print-label",
    "build": "pnpm exec tsc",
    "test:prepare": "pnpm exec pack-to-folder --renameTo=.npm-package --forceRewrite",
    "test:unit": "pnpm exec tape \"tests/*.js\"",
    "test:clean": "pnpm exec rimraf .npm-package",
    "test": "pnpm run all build test:*",
    "prepare": "pnpm run build"
  },
  "author": {
    "name": "Nikolai Mavrenkov",
    "email": "koluch@koluch.ru",
    "url": "koluch.ru"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/koluch/esbuild-plugin-sass.git"
  },
  "keywords": [
    "esbuild",
    "plugin",
    "sass"
  ],
  "dependencies": {
    "css-tree": "1.1.2",
    "fs-extra": "9.0.1",
    "sass": "1.47.0",
    "tmp": "0.2.1"
  },
  "peerDependencies": {
    "esbuild": ">=0.11.14"
  },
  "devDependencies": {
    "@types/css-tree": "1.0.5",
    "@types/fs-extra": "9.0.8",
    "@types/node": "14.14.35",
    "@types/sass": "1.43.1",
    "@types/tmp": "0.2.0",
    "esbuild": "0.11.14",
    "husky": "4.3.7",
    "lint-staged": "10.5.3",
    "npm-run-all": "4.1.5",
    "pack-to-folder": "1.0.0",
    "prettier": "2.2.1",
    "rimraf": "3.0.2",
    "tape": "5.1.1",
    "typescript": "4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm exec lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npx prettier --write"
    ]
  },
  "files": [
    "index.js",
    "index.d.ts",
    "index.d.ts.map",
    "internals/*.js",
    "internals/*.d.ts",
    "internals/*.d.ts.map"
  ]
}
